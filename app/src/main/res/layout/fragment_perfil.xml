<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/profile_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:hint="Nombre"
                android:textColorHint="#A9A9A9" />

            <TextView
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textSize="14sp"
                android:textColor="#007AFF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuenta"
            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/account_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/account_types"
            android:layout_gravity="center_vertical"
            android:enabled="false"
            android:focusable="false" />

        <Button
            android:id="@+id/change_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar la contraseña"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:backgroundTint="@color/primary_color"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:hint="Correo electrónico"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:hint="Teléfono"
            android:textColor="#000000"
            android:textColorHint="#A9A9A9" />

        <EditText
            android:id="@+id/profile_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_language"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:hint="Idioma"
            android:textColor="#000000"
            android:textColorHint="#A9A9A9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support_service"
            android:drawableStart="@drawable/ic_support"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:textColor="#000000" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:paddingVertical="8dp"
            android:backgroundTint="@color/primary_color"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>
